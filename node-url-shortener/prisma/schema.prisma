generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model shortlink {
  ID          Int     @id @default(autoincrement())
  ShortUrl    String? @unique(map: "ShortUrl") @db.VarChar(16)
  OriginalUrl String? @db.VarChar(500)
  fk_UserID   Int?
  user        user?   @relation(fields: [fk_UserID], references: [ID], onDelete: NoAction, onUpdate: NoAction, map: "shortlink_ibfk_1")

  @@index([fk_UserID], map: "fk_UserID")
}

model user {
  ID           Int         @id @default(autoincrement())
  Name         String      @db.VarChar(60)
  Password     String      @db.VarChar(60)
  Email        String      @unique(map: "Email") @db.VarChar(60)
  CreationDate DateTime?   @db.Date
  shortlink    shortlink[]
}
