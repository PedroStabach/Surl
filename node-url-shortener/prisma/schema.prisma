generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model shortlink {
  ID          Int     @id @default(autoincrement())
  ShortUrl    String @db.VarChar(16)
  OriginalUrl String @db.VarChar(500)
  fk_UserID   Int

  @@unique([ShortUrl, ID], map: "ShortUrl")
}

model user {
  ID            Int       @id @default(autoincrement())
  Name          String?   @db.VarChar(60)
  Email         String?   @db.VarChar(60)
  CreationDate  DateTime? @db.Date
  fk_id_ShortID Int?

  @@unique([ID, fk_id_ShortID], map: "ID")
}
