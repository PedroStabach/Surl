generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Shortlink {
  id          Int     @id @default(autoincrement())
  shortUrl    String  @unique
  originalUrl String
  fkUserId    Int?
  user        User?   @relation(fields: [fkUserId], references: [id])

  @@index([fkUserId])
}

model User {
  id           Int         @id @default(autoincrement())
  name         String
  password     String?
  email        String      @unique
  googleId     String?     @unique
  avatar       String?
  creationDate DateTime?
  shortlinks   Shortlink[]
}
